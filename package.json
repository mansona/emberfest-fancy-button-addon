{
  "name": "new-fancy-button",
  "version": "0.0.0",
  "private": true,
  "repository": "",
  "license": "MIT",
  "author": "",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm --workspace=new-fancy-button run build",

    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "npm --workspace=new-fancy-button run start",
    "start:test": "npm --workspace=test-app run start",

    "lint": "npm --workspaces run lint",
    "lint:fix": "npm --workspaces run lint:fix",

    "test": "npm --workspaces run test"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "prettier": "^2.5.1"
  },
  "workspaces": [
    "new-fancy-button",
    "test-app"
  ]
}
